<div class="row">
  <div class="col col-xs-12">
    <% flash.each do |name, messages| %>
      <div class="alert alert-<%= name.to_s %>">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <%= content_tag :div, messages, :id => "flash_#{name}" %>
      </div>
    <% end %>
  </div>
</div>
