<div class="row">
  <div class="col col-xs-12 col-sm-4">
    <%= form_for @tweet do |f| %>
      <%= content_tag :div, class: "form-group #{@tweet.errors[:body].any? ? 'has-error' : ''}" do -%>
        <%= f.text_area :body, class: "form-control" %>
        <% @tweet.errors[:body].each do |msg| %>
          <span class="help-block">
            <%= msg.humanize %>
          </span>
        <% end -%>
      <% end -%>
      <%= f.submit "Create", class: "btn btn-default btn--purple full-width" %>
    <% end %>
  </div>
</div>
