<div class="row">
  <div class="col col-xs-12 col-sm-8 col-sm-offset-2">
    <h1> New Chirpster </h1>
  </div>
</div>
<div class="row">
  <div class="col col-xs-12 col-sm-8 col-sm-offset-2">
    <%= form_tag(action: 'authenticate') do %>
      <div class="form-group">
        <label>Username</label>
        <%= text_field_tag :username, nil, class: "form-control" %>
      </div>

      <div class="form-group">
        <label>Password</label>
        <%= password_field_tag :password, nil, class: "form-control"%>
      </div>
      <%= submit_tag "Log In", class: "btn btn-default btn--purple full-width" %>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="col col-xs-12 col-sm-8 col-sm-offset-2 text-center push-top">
    <span>Don't have an account? <%= link_to "Become a Chirpster!", new_user_path %></span>
  </div>
</div>
